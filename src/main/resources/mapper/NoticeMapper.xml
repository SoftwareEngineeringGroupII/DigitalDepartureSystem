<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.digitaldeparturesystem.mapper.NoticeMapper">

    <!--添加公告-->
    <insert id="save" parameterType="com.digitaldeparturesystem.pojo.Notice">
        insert into notice(noticeID,content,title,publisherId,publishTime,checkStatus,remark,noticeType,isTop)
        values(#{noticeID},#{content},#{title},#{publisherId},#{publishTime},#{checkStatus},#{remark},#{noticeType},#{isTop});
    </insert>

    <!--删除公告-->
    <delete id="deleteNotice" parameterType="String">
        delete from notice where noticeID=#{noticeID}
    </delete>

    <!--查看自己的公告-->
    <select id="findSelfNotice" parameterType="String" resultType="com.digitaldeparturesystem.pojo.Notice">
        select * from notice where publisherID=#{ClerkId};
    </select>

    <!--设置公告的状态 通过pass-->
    <update id="setNoticePass" parameterType="String">
        update notice set checkStatus=1 where noticeID=#{noticeID}
    </update>

    <!--设置公告的状态 拒绝refuse-->
    <update id="setNoticeRefuse">
        update notice set checkStatus=2 where noticeID=#{noticeID}
    </update>

    <!--首页显示所有审核通过的公告-->
    <select id="viewAllByPeople"  resultType="com.digitaldeparturesystem.pojo.Notice">
         select noticeID,noticeType,title,publishTime from notice where checkStatus=1 order by substring(0,publishTime,10)) desc
    </select>

    <!--公告查看公告详情-->
    <select id="viewNoticeDetails" parameterType="String" resultType="com.digitaldeparturesystem.pojo.Notice">
        select n.noticeID,n.title,n.content,n.noticeType,n.publishTime,n.path from notice n where noticeID=#{noticeID};
    </select>

    <!--未审核的公告 状态：0-->
    <select id="NoCheckNotice" resultType="com.digitaldeparturesystem.pojo.Notice">
         select * from notice where checkStatus=0
    </select>

    <!--已通过的公告 状态：1-->
    <select id="haveCheckNotice" resultType="com.digitaldeparturesystem.pojo.Notice">
         select * from notice where checkStatus=1
    </select>

    <!--被拒绝公告 状态：2-->
    <select id="RefuseNotice" resultType="com.digitaldeparturesystem.pojo.Notice">
         select * from notice where checkStatus=2
    </select>

    <!--公告草稿 状态：3-->
    <select id="draftNotice" resultType="com.digitaldeparturesystem.pojo.Notice">
         select * from notice where checkStatus=3
    </select>



</mapper>