<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace=绑定一个对应的mapper接口-->
<mapper namespace="com.digitaldeparturesystem.mapper.RoleMapper">

    <!--select查询语句-->

    <!--对象中的属性可以换直接取出来-->
    <insert id="addRole" parameterType="com.digitaldeparturesystem.pojo.Role">
        insert into role(id,code,`name`,index)
        values(#{id},#{code},#{name},#{index});
    </insert>

    <insert id="deleteRole" parameterType="java.lang.String">
        delete from role where id = #{id};
    </insert>

    <update id="updateRole" parameterType="com.digitaldeparturesystem.pojo.Role">
        update role set
        id = #{id}
        code = #{code}
        `name` = #{name}
        index = #{index}
        where id = #{id};
    </update>

    <select id="getRoles" resultType="com.digitaldeparturesystem.pojo.Role">
        select * from role;
    </select>

</mapper>