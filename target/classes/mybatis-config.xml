<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<!--config核心配置文件-->
<configuration>

    <!--Settings:控制mybatis的全局行为-->
    <settings>
        <!--设置mybatis的全局日志-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--配置环境-->
    <environments default="mysql">
        <!--配置mysql的环境-->
        <environment id="mysql">
            <!--配置事务类型-->
            <transactionManager type="JDBC"/>
            <!--配置数据源-->
            <dataSource type="POOLED">
                <!--配置数据库的四个信息-->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://121.196.104.229:3306/digital_departure_system?characterEncoding=utf-8&amp;useSSL=false&amp;serverTimezone=UTC"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>
    </environments>

    <!--每一个mapper.xml都需要在Mybatis核心配置文件中注册-->
    <mappers>
        <mapper resource="mapper/StudentMapper.xml"/>
        <mapper resource="mapper/AdminMapper.xml"/>
        <mapper resource="mapper/SettingsMapper.xml"/>
        <mapper resource="mapper/SectorMapper.xml"/>
        <mapper resource="mapper/RefreshTokenMapper.xml"/>
        <mapper resource="mapper/AuthoritiesMapper.xml"/>
        <mapper resource="mapper/RoleMapper.xml"/>
        <mapper resource="mapper/RoleAuthorityMapper.xml"/>
        <mapper resource="mapper/UserRoleMapper.xml"/>
        <mapper resource="mapper/NoticeMapper.xml"/>
    </mappers>
</configuration>