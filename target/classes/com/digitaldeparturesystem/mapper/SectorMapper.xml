<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--namespace=绑定一个对应的mapper接口-->
<mapper namespace="com.digitaldeparturesystem.mapper.SectorMapper">

    <select id="findOneByEmail" parameterType="java.lang.String" resultType="com.digitaldeparturesystem.pojo.Clerk">
        select * from clerk where clerkEmail = #{clerkEmail};
    </select>

    <select id="findOneByClerkAccount" parameterType="java.lang.String" resultType="com.digitaldeparturesystem.pojo.Clerk">
        select * from clerk where clerkAccount = #{clerkAccount};
    </select>

    <select id="findOneById" parameterType="java.lang.String" resultType="com.digitaldeparturesystem.pojo.Clerk">
        select * from clerk where clerkID = #{clerkId};
    </select>

</mapper>